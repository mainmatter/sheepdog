---
import Default from '@astrojs/starlight/components/Footer.astro';
import MainmatterLogo from '../assets/Mainmatter.astro';
import { is_homepage } from '@utils/is-homepage';

const isHomepage = is_homepage(Astro.locals.starlightRoute.id);
---

{
	isHomepage ? (
		<footer>
			<a
				href="https://mainmatter.com/svelte-consulting/"
				target="_blank"
				rel="noopener noreferrer"
			>
				<MainmatterLogo />
			</a>
			&copy; 2024 Mainmatter GmbH
		</footer>
	) : (
		<Default {...Astro.props}>
			<slot />
		</Default>
	)
}

<style>
	footer {
		text-align: center;
		padding: 100px 0 0 0;
	}

	footer > a {
		display: block;
	}

	footer > a > :global(svg) {
		height: 50px;
		width: auto;
		max-width: 50vw;
		color: var(--sl-color-white);
	}
</style>
