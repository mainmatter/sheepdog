{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "all",
	"semi": true,
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": "package.json",
			"options": {
				"useTabs": false
			}
		},
		{
			"files": "*.mdx",
			"options": {
				"proseWrap": "always"
			}
		}
	]
}
